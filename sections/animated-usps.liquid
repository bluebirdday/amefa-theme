<section class="section-{{ section.id }}-padding amefa-usps__content page-width">
    {{ section.settings.amefa_usps }}
    {{ section.settings.amefa_usps }}
</section>
{%- style -%}
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  }
{%- endstyle -%}
{{ 'animated-usps.css' | asset_url | stylesheet_tag }}
{% schema %}
{
  "name": "Animated USPs",
  "tag": "section",
  "class": "amefa-animated-usps",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "amefa_usps",
      "default": "<p>Text</p>",
      "label": "USP's"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Animated USP's",
      "settings": {
        "amefa_usps": "<ul><li>USP 1</li><li>USP 2</li><li>USP 3</li></ul>"
      }
    }
  ]
}
{% endschema %}
